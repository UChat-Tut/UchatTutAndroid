<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/navigation_chat">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.tla.uchattut.presentation.chatlist.view.ChatListFragment"
        android:label="@string/dialogs"
        tools:layout="@layout/fragment_chat_list">
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.tla.uchattut.presentation.profile.view.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.tla.uchattut.presentation.tasks.view.TasksFragment"
        android:label="TasksFragment"
        tools:layout="@layout/fragment_tasks"/>

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.tla.uchattut.presentation.schedule.view.ScheduleFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/fragment_schedule"/>

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.tla.uchattut.presentation.library.view.LibraryFragment"
        android:label="LibraryFragment"
        tools:layout="@layout/fragment_library"/>

</navigation>