<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/navigation_conversation">

    <fragment
        android:id="@+id/navigation_conversation"
        android:name="com.tla.uchattut.presentation.conversation.conversation.ConversationFragment"
        android:label="@string/nav_title_chat"
        tools:layout="@layout/fragment_conversation">
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.tla.uchattut.presentation.profile.view.ProfileFragment"
        android:label="@string/nav_title_profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.tla.uchattut.presentation.tasks.view.TasksFragment"
        android:label="@string/nav_title_tasks"
        tools:layout="@layout/fragment_tasks"/>

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.tla.uchattut.presentation.schedule.view.ScheduleFragment"
        android:label="@string/nav_title_schedule"
        tools:layout="@layout/fragment_schedule"/>

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.tla.uchattut.presentation.library.view.LibraryFragment"
        android:label="@string/nav_title_library"
        tools:layout="@layout/fragment_library"/>

</navigation>