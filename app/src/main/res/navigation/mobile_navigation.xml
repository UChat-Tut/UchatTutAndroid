<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_main">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.tla.uchattut.presentation.chat.view.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.tla.uchattut.presentation.dashboard.view.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.tla.uchattut.presentation.notifications.view.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_main"
        android:name="com.tla.uchattut.presentation.MainFragment"
        android:label="MainFragment" />
    <fragment
        android:id="@+id/navigation_auth"
        android:name="com.tla.uchattut.presentation.auth.view.AuthFragment"
        android:label="AuthFragment" />
</navigation>